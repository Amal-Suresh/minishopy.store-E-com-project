<script>
	$(document).ready(function () {
		// Set the first thumbnail image as active and display its corresponding big image on page load
		var firstThumbnail = $('.thumbnails img:first-child');
		firstThumbnail.addClass('active');
		var bigImage = firstThumbnail.data('big-image');
		$('.big-image img').attr('src', bigImage);

		var zoom = null; // Initialize zoom to null

		// When a thumbnail is clicked, update the big image with the corresponding image and add zoom feature
		$('.thumbnails img').click(function () {
			var bigImage = $(this).data('big-image');
			$('.big-image img').attr('src', bigImage);

			// Destroy the previous zoom feature if any
			if (zoom !== null && typeof zoom.destroy === 'function') {
				zoom.destroy();

			}

			// Set up zoom feature for the new big image
			var options = {
				width: 300,
				height: 300,
				zoomWidth: 400,
				zoomHight: 400,
				offset: { vertical: 10, horizontal: 5 },
				onDestroy: function () {
					$('#img-container').off('mousemove');
				}
			};
			zoom = new ImageZoom(document.getElementById("img-container"), options);

			// Update the active thumbnail
			$('.thumbnails img').removeClass('active');
			$(this).addClass('active');
		});

		// Add image zoom feature to the first big image on page load
		var options = {
			width: 300,
			height: 300,
			zoomWidth: 400,
			zoomHight: 400,
			offset: { vertical: 10, horizontal: 5 },
			onDestroy: function () {
				$('#img-container').off('mousemove');
			}
		};
		zoom = new ImageZoom(document.getElementById("img-container"), options);
	});

</script>