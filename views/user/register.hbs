<div class="container mt-2">
	<div class="row justify-content-center align-items-center text-center p-2">
		<div class="m-1 col-sm-8 col-md-6 col-lg-4 shadow-sm p-3 mb-5 bg-white border rounded">
			<div class="pt-1  pb-3">
				<img class="rounded mx-auto d-block"
					src="https://freelogovector.net/wp-content/uploads/logo-images-13/microsoft-cortana-logo-vector-73233.png"
					alt="" width=70px height=70px>
				<p class="text-center text-uppercase mt-1">SignUp</p>
				<form class="form text-center" action="/register" method="POST" id="form" name="form" onsubmit="return userregister()">
					<div class="form-group input-group-md">
						<input type="text" class="form-control" name="fname" aria-describedby="emailHelp" placeholder="First name" id="username">
						
    						
					</div>
					<div class="form-group input-group-md input-control">
						<input type="text" class="form-control" name="lname" placeholder="Lastname" id="">
						
					</div>
					<div class="form-group input-group-md input-control">
						<input type="email" class="form-control" name="email" placeholder="Enter email" id="email">
						
					</div>
					<div class="form-group input-group-md input-control">
						<input type="number" class="form-control" name="mobile" placeholder="Mobile no">
						
					</div>
					<div class="form-group input-group-md input-control">
						<input type="password" class="form-control" name="password" placeholder="Password" id="password">
						 <div class="">
							<p id="errorMessage-div" class="text-danger"></p>
						 </div>
					</div>
					<button class="btn btn-block btn-primary mt-4" type="submit">
						SignUp
					</button>
				</form>
			</div>
			<p href="#" class="text-center d-block">Already have Account ? <a href="/login">LogIn</a></p>
		</div>
	</div>
</div>

<script>
function userregister(){
   
  var firstName=document.form.fname.value;
  var lastName=document.form.lname.value;
  var email=document.form.email.value;
  var mobile=document.form.mobile.value;
  var password=document.form.password.value;

  var reg =    /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
  var nameerror= (/^[A-Za-z]+$/);
  var phoneerror=(/^[0-9]{10}$/);
  var passerror=(/^(?=.*[A-Z])(?=.*[!@#$%^&*])(?=.{8,})/)
  var error=document.getElementById("errorMessage-div");

  if(firstName==""){
      error.innerHTML='Please enter your firstname'
      return false;
  }
  if(lastName==""){
      error.innerHTML='Please enter your lastname'
      return false;
  }
  if(nameerror.test(firstName)==false){
    error.innerHTML='invalid firstname'
    return false;
} 
  if(nameerror.test(lastName)==false){
    error.innerHTML='invalid lastname'
    return false;
} 
if(firstName.length<4){
     error.innerHTML='Name should contain atleast 5 elements'
      return false;
  }
if(lastName.length<3){
     error.innerHTML='Name should contain atleast 5 elements'
      return false;
  }
  if(email==""){
      error.innerHTML='Please enter your email id'
      return false;
  }
  if(reg.test(email)==false){
    error.innerHTML='invalid email id'
    return false;
  }
  if(phoneerror.test(mobile)==false){
      error.innerHTML='Phone number should contain 10 numbers'
      return false;
  }
  if(passerror.test(password)==false){
      error.innerHTML='password must contain 8 characters, at least one special character, and at least one uppercase letter'
      return false;
  }
  
  return true;

}
</script>