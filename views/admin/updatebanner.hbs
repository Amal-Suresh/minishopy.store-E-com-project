<div class="container mt-2">
  <div class="row justify-content-center align-items-center text-center p-2">
    <div class="m-1 col-sm-8 col-md-6 col-lg-4 shadow-sm p-3 mb-5 bg-white border rounded">
      <div class="pt-1  pb-3">
        <img class="rounded mx-auto d-block"
          src="https://freelogovector.net/wp-content/uploads/logo-images-13/microsoft-cortana-logo-vector-73233.png"
          alt="" width=70px height=70px>
        <p class="text-center text-uppercase mt-1">UPDATE BANNER</p>
        <form class="form text-center" action="/admin/updatebanner" method="POST" name="form"
          enctype="multipart/form-data">
          
           {{!-- onsubmit="return validateadd()" --}}

          <div class="form-group input-group-md mb-2">
            <input  type="hidden" class="form-control" value="{{bannerDetails._id}}" name="_id" placeholder="url">

            <input required type="text" class="form-control" value="{{bannerDetails.title}}" name="title" aria-describedby="emailHelp"
              placeholder="Banner Title">


          </div>
          <div class="form-group input-group-md mb-2">
            <input required type="text" class="form-control" value="{{bannerDetails.subtitle}}" name="subtitle" aria-describedby="emailHelp"
              placeholder="Banner subtitle">

          </div>
          <div class="w-100 d-flex justify-content-center">
            <div style="width: 200px; height: 200px;">
              <img style="width: 100px;" src="/productImages/{{bannerDetails.image}}" alt="">
              <a href="/admin/removeimage/?id={{bannerDetails._id}}&imageId={{bannerDetails.image}}"><i class="bi bi-x-octagon-fill text-danger"></i></a>

            </div>
          </div>
          <div class="form-group input-group-md mb-2">
            <input  type="file" class="form-control"  multiple name="image" id="image-input"
              placeholder="bannner img">
            <p id="error-message" class="hidden"></p>

          </div>
          <div class="form-group input-group-md mb-2">
            <input required type="text" class="form-control" value="{{bannerDetails.discription}}" name="discrip" placeholder="discription">

          </div>

          <div class="form-group input-group-md mb-2">
            <input required type="text" class="form-control" value="{{bannerDetails.url}}" name="btnurl" placeholder="url">

          </div>
          <div class="">
            <p id="errorMessage-div" class="text-danger"></p>
          </div>
          <button class="btn btn-block btn-success mt-4" type="submit">
           Update Banner
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

