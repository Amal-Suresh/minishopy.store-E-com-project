<div class="text-center py-4">
    <h3>COUPON MANAGENENT</h3>
</div>

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <div class="d-flex justify-content-end my-3">
            <a href="/admin/addcoupon"><button class="btn btn-success">Add New Coupon</button></a>
        </div>
        <div class="table-responsive">
            <table class="table  table-hover">
                <thead class="align-middle">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Code</th>
                        <th scope="col">Discount Value</th>
                        <th scope="col">Minimum Purchase</th>
                        <th scope="col">Maximum Discount</th>
                        <th scope="col">Limit</th>
                        <th scope="col">Expire Date</th>
                        <th scope="col">Actions</th>


                    </tr>
                </thead>
                <tbody class="align-middle">
                    {{#each coupons}}
                    <tr>

                        <td>{{couponName}}</td>
                        <td>{{couponCode}}</td>
                        <td>{{discountValue}}%</td>
                        <td>{{minPurchase}}</td>
                        <td>{{maxDiscount}}</td>
                        <td>{{limit}}</td>
                        <td>{{expireDate}}</td>
                        

                        {{#if status}}
                        <td><a href="/admin/deactivate/?id={{_id}}"><button class="btn btn-success">Activate</button></a>
                        <td><a href="/admin/deletecoupon/?id={{_id}}"><button class="btn btn-danger"><i class="bi bi-x-circle-fill"></i></button></a>

                        </td>
                        {{else}}
                        <td><a href="/admin/activate/?id={{_id}}"><button class="btn btn-danger">Dactivate</button></a>
                        <td><a href="/admin/deletecoupon/?id={{_id}}"><button class="btn btn-danger"><i class="bi bi-x-circle-fill"></i></button></a>
                        </td>
                        {{/if}}

                        


                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
  <script>
        var mylink=document.getElementById("coupon")
        mylink.classList.add("active")
      </script>