<div class="container mt-2">
	<div class="row justify-content-center align-items-center text-center p-2">
		<div class="m-1 col-sm-8 col-md-6 col-lg-4 shadow-sm p-3 mb-5 bg-white border rounded">
			<div class="pt-1  pb-3">
				<img class="rounded mx-auto d-block"
					src="https://freelogovector.net/wp-content/uploads/logo-images-13/microsoft-cortana-logo-vector-73233.png"
					alt="" width=70px height=70px>
				<p class="text-center text-uppercase mt-1">Add Coupon</p>
				<form class="form text-center" action="/admin/addcoupon" method="POST" >
				
					<div class="form-group input-group-md">
						<input type="text" class="form-control" name="couponName" aria-describedby="emailHelp"
							placeholder="Coupon Name">
						
					</div>
					<div class="form-group input-group-md">
						<input type="text" class="form-control" name="couponCode" placeholder="Coupon Code">
						
					</div>
					<div class="form-group input-group-md">
						<input type="number" class="form-control" name="discountValue" placeholder="Discount Value">
						
					</div>
					<div class="form-group input-group-md">
						<input type="number" class="form-control" name="maxDiscount" placeholder="Max Discount">
						
					</div>
					<div class="form-group input-group-md">
						<input type="number" class="form-control" name="limit" placeholder="Enter Limit">
						
					</div>
					
					<div class="form-group input-group-md">
						<input type="number" class="form-control" name="minPurchase" placeholder="Minimun Purchase Amonut">
						
					</div>
					<div class="form-group input-group-md">
						<input type="date" class="form-control" name="expireDate" placeholder="Expire date">
						
					</div>
					<button class="btn btn-block btn-primary mt-4" type="submit">
						CREATE COUPON
					</button>
				</form>
			</div>
		</div>
	</div>
</div>